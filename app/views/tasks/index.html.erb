<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
   <li>
      <input type="checkbox" name="myTask">
      <label for="myTask"> <%= link_to task.title, task_path(task) %> </label>
      <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
   </li>
  <% end %>
</ul>

<%= link_to "New task", new_task_path %>
